@page
@using Models
@using Utils
@model K9_Koinz.Pages.Bills.EditModel

@{
    ViewData["Title"] = "Edit Bill";
}

<h1>Edit</h1>

<h4>Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Record.Id" />
            <div class="form-group">
                <label asp-for="Record.Name" class="control-label"></label>
                <input asp-for="Record.Name" class="form-control" />
                <span asp-validation-for="Record.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.AccountId" class="control-label"></label>
                <select asp-for="Record.AccountId" class="form-control" asp-items="@Model.AccountOptions">
                    <option value="" selected disabled>Select an Account...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Record.MerchantId" class="control-label"></label>
                <input id="txtMerchant" class="form-control" value="@Model.Record.MerchantName" />
                <input asp-for="Record.MerchantId" type="hidden" id="hfMerchant" />
                <span asp-validation-for="Record.MerchantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.CategoryId" class="control-label"></label>
                <input id="txtCategory" class="form-control" value="@Model.Record.CategoryName" />
                <input asp-for="Record.CategoryId" type="hidden" id="hfCategory" />
                <span asp-validation-for="Record.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.BillAmount" class="control-label"></label>
                <input asp-for="Record.BillAmount" class="form-control" />
                <span asp-validation-for="Record.BillAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.RepeatConfig.FirstFiring" class="control-label"></label>
                <input asp-for="Record.RepeatConfig.FirstFiring" class="form-control" value="@Model.Record.RepeatConfig.FirstFiring.FormatForUrl()" />
                <span asp-validation-for="Record.RepeatConfig.FirstFiring" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.RepeatConfig.Mode" class="control-label"></label>
                <select asp-for="Record.RepeatConfig.Mode" id="modeSelector" class="form-control" asp-items="Html.GetEnumSelectList<RepeatMode>()">
                </select>
                <span asp-validation-for="Record.RepeatConfig.Mode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.RepeatConfig.Frequency" class="control-label"></label>
                <select asp-for="Record.RepeatConfig.Frequency" id="modeSelector" class="form-control" asp-items="Html.GetEnumSelectList<RepeatFrequency>()">
                    <option value="" selected disabled>Make a selection...</option>
                </select>
                <span asp-validation-for="Record.RepeatConfig.Frequency" class="text-danger"></span>
            </div>
            <div class="form-group" id="grpIntervalGap">
                <label asp-for="Record.RepeatConfig.IntervalGap" class="control-label"></label>
                <input asp-for="Record.RepeatConfig.IntervalGap" class="form-control" />
                <span asp-validation-for="Record.RepeatConfig.IntervalGap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Record.RepeatConfig.TerminationDate" class="control-label"></label>
                @if (Model.Record.RepeatConfig.TerminationDate.HasValue) {
                    <input asp-for="Record.RepeatConfig.TerminationDate" class="form-control" value="@Model.Record.RepeatConfig.TerminationDate.Value.FormatForUrl()" />
                } else {
                    <input asp-for="Record.RepeatConfig.TerminationDate" class="form-control" />
                }
                <span asp-validation-for="Record.RepeatConfig.TerminationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary my-2">
                    <i class="fa-solid fa-floppy-disk"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css" />

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(function () {
            $('#grpIntervalGap').hide();

            $('#modeSelector').change(function () {
                if (this.value == 1) {
                    $('#grpIntervalGap').show();
                } else {
                    $('#grpIntervalGap').hide();
                }
            })

            $("#txtMerchant").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Bills/Edit?handler=MerchantAutoComplete",
                        data: { text: request.term },
                        type: "GET",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(JSON.stringify(response));
                        },
                        failure: function (response) {
                            alert(JSON.stringify(response));
                        }
                    });
                },
                select: function (e, i) {
                    $("#hfMerchant").val(i.item.val);
                },
                minLength: 1
            });

            $("#txtCategory").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Bills/Edit?handler=CategoryAutoComplete",
                        data: { text: request.term },
                        type: "GET",
                        success: function (data) {
                            response($.map(data, function (item) {
                                return item;
                            }))
                        },
                        error: function (response) {
                            alert(JSON.stringify(response));
                        },
                        failure: function (response) {
                            alert(JSON.stringify(response));
                        }
                    });
                },
                select: function (e, i) {
                    $("#hfCategory").val(i.item.val);
                },
                minLength: 1
            });
        });
    </script>
}

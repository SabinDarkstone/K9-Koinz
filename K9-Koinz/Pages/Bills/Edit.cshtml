@page
@model K9_Koinz.Pages.Bills.EditModel

@{
    ViewData["Title"] = "Edit Bill";
}

<h1>Edit</h1>

<h4>Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Record.Id" />
            <input type="hidden" asp-for="Record.RepeatConfig.PreviousFiring" />
            <div class="form-group form-floating">
                <input asp-for="Record.Name" class="form-control" placeholder="Name" />
                <label asp-for="Record.Name"></label>
                <span asp-validation-for="Record.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <select asp-for="Record.AccountId" class="form-control" asp-items="@Model.AccountOptions">
                    <option value="" selected disabled>Select an Account...</option>
                </select>
                <label asp-for="Record.AccountId"></label>
            </div>
            <div class="form-group form-floating">
                <input id="txtMerchant" class="form-control" value="@Model.Record.MerchantName" placeholder="Merchant" />
                <label asp-for="Record.MerchantId"></label>
                <input asp-for="Record.MerchantId" type="hidden" id="hfMerchant" />
                <span asp-validation-for="Record.MerchantId" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input id="txtCategory" class="form-control" value="@Model.Record.CategoryName" placeholder="Category" />
                <label asp-for="Record.CategoryId"></label>
                <input asp-for="Record.CategoryId" type="hidden" id="hfCategory" />
                <span asp-validation-for="Record.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="Record.Amount" class="form-control" placeholder="Amount"/>
                <label asp-for="Record.Amount"></label>
                <span asp-validation-for="Record.Amount" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="Record.RepeatConfig.FirstFiring" class="form-control" value="@Model.Record.RepeatConfig.FirstFiring.FormatForUrl()" readonly style="background-color:#eaeaea"/>
                <label asp-for="Record.RepeatConfig.FirstFiring"></label>
                <span asp-validation-for="Record.RepeatConfig.FirstFiring" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="Record.RepeatConfig.NextFiring" class="form-control" value="@Model.Record.RepeatConfig.NextFiring.Value.FormatForUrl()" />
                <label asp-for="Record.RepeatConfig.NextFiring"></label>
                <span asp-validation-for="Record.RepeatConfig.NextFiring" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <select asp-for="Record.RepeatConfig.Mode" id="modeSelector" class="form-control" asp-items="Html.GetEnumSelectList<RepeatMode>()">
                </select>
                <label asp-for="Record.RepeatConfig.Mode"></label>
                <span asp-validation-for="Record.RepeatConfig.Mode" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <select asp-for="Record.RepeatConfig.Frequency" id="modeSelector" class="form-control" asp-items="Html.GetEnumSelectList<RepeatFrequency>()">
                    <option value="" selected disabled>Make a selection...</option>
                </select>
                <label asp-for="Record.RepeatConfig.Frequency"></label>
                <span asp-validation-for="Record.RepeatConfig.Frequency" class="text-danger"></span>
            </div>
            <div class="form-group form-floating" id="grpIntervalGap">
                <input asp-for="Record.RepeatConfig.IntervalGap" class="form-control" placeholder="Repeat Gap"/>
                <label asp-for="Record.RepeatConfig.IntervalGap"></label>
                <span asp-validation-for="Record.RepeatConfig.IntervalGap" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                @if (Model.Record.RepeatConfig.TerminationDate.HasValue) {
                    <input asp-for="Record.RepeatConfig.TerminationDate" class="form-control" value="@Model.Record.RepeatConfig.TerminationDate.Value.FormatForUrl()" placeholder="End Date"/>
                } else {
                    <input asp-for="Record.RepeatConfig.TerminationDate" class="form-control" placeholder="End Date"/>
                }
                <label asp-for="Record.RepeatConfig.TerminationDate"></label>
                <span asp-validation-for="Record.RepeatConfig.TerminationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check form-switch">
                    @Html.EditorFor(x => x.Record.IsAutopay, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label" asp-for="Record.IsAutopay"></label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check form-switch">
                    @Html.EditorFor(x => x.Record.IsActive, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label" asp-for="Record.IsActive"></label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary my-2">
                    <i class="fa-solid fa-floppy-disk"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/repeatConfigModeToggler.js"></script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@page
@using K9_Koinz.Utils
@model K9_Koinz.Pages.Budgets.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Budget</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.Description)
        </dd>
    </dl>

    <h4>Budget Categories</h4>
    <div class="col-sm-5">
        <table class="table mt-2">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Budgeted Amount</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var budgetLine in Model.BudgetLines) {
                    <tr>
                        <td>
                            @budgetLine.BudgetCategoryName
                        </td>
                        <td>
                            @budgetLine.BudgetedAmount.FormatCurrency()
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <form method="post">
        <input type="hidden" asp-for="Budget.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@page
@using K9_Koinz.Utils
@model K9_Koinz.Pages.Budgets.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<style scoped>
    .top-level {
        font-weight: bold;
    }
</style>

<h1>Details</h1>

<div>
    <h4>Budget</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Budget.BudgetTagId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Budget.BudgetTagName)
        </dd>
        @if (Model.Budget.CreatedDate != DateTime.MinValue) {
            <dt class="col-sm-2 mt-4">
                @Html.DisplayNameFor(model => model.Budget.CreatedDate)
            </dt>
            <dd class="col-sm-10 mt-4">
                @Html.DisplayFor(model => model.Budget.CreatedDate)
            </dd>
        }
        @if (Model.Budget.LastModifiedDate != DateTime.MinValue) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Budget.LastModifiedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Budget.LastModifiedDate)
            </dd>
        }
    </dl>
</div>

<h4>Budget Categories</h4>
<div class="col-sm-5">
    <table class="table mt-2">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Budgeted Amount</th>
                <th>Rollover?</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var budgetLine in Model.BudgetLines) {
                <tr>
                    <td>
                        @budgetLine.BudgetCategoryName
                    </td>
                    <td>
                        @budgetLine.BudgetedAmount.FormatCurrency(0)
                    </td>
                    <td>
                        @if (budgetLine.Periods.Count == 0) {
                            <span>No</span>
                        } else if (budgetLine.Periods.Count == 1) {
                            <span>Yes - Not Ready</span>
                        } else {
                            <span>Active</span>
                        }
                    </td>
                    <td>
                        <a asp-page="/BudgetLines/Edit" asp-route-id="@budgetLine.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Budget.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.Budget.Id">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>

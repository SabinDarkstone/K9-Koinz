@page
@using Models
@model K9_Koinz.Pages.BudgetLines.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Budget Line</h4>
<hr />
<div class="row mb-3">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BudgetLine.Id" />
            <div class="form-group">
                <label asp-for="BudgetLine.BudgetId" class="control-label"></label>
                <input type="text" value="@Model.BudgetLine.Budget.Name" class="form-control" disabled />
                <input type="hidden" asp-for="BudgetLine.BudgetId" />
            </div>
            <div class="form-group">
                <label asp-for="BudgetLine.BudgetCategoryId" class="control-label"></label>
                <select asp-for="BudgetLine.BudgetCategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BudgetLine.BudgetedAmount" class="control-label"></label>
                <input type="number" asp-for="BudgetLine.BudgetedAmount" class="form-control" min="1" />
            </div>
            <div class="form-group">
                <label asp-for="BudgetLine.LineType" class="control-label"></label>
                <select asp-for="BudgetLine.LineType" class="form-control" asp-items="@Html.GetEnumSelectList<BudgetLineType>()">
                    <option disabled selected>Select one...</option>
                </select>
                <span asp-validation-for="BudgetLine.LineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-page="/Budgets/Edit" asp-route-id="@Model.BudgetLine.BudgetId" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

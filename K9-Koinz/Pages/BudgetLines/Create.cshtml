@page
@using Models
@model K9_Koinz.Pages.BudgetLines.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Budget Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BudgetLine.BudgetId" class="control-label"></label>
                <input type="text" value="@Model.Budget.Name" class="form-control" readonly />
                <input type="hidden" asp-for="BudgetLine.BudgetId" value="@Model.Budget.Id" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="BudgetLine.BudgetCategoryId" class="control-label"></label>
                <select asp-for="BudgetLine.BudgetCategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BudgetLine.BudgetedAmount" class="control-label"></label>
                <input asp-for="BudgetLine.BudgetedAmount" class="form-control" />
                <span asp-validation-for="BudgetLine.BudgetedAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetLine.LineType" class="control-label"></label>
                <select asp-for="BudgetLine.LineType" class="form-control" asp-items="@Html.GetEnumSelectList<BudgetLineType>()">
                    <option disabled selected>Select one...</option>
                </select>
                <span asp-validation-for="BudgetLine.LineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

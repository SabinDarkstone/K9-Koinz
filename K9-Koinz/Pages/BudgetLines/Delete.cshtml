@page
@using K9_Koinz.Utils
@model K9_Koinz.Pages.BudgetLines.DeleteModel

@{
    ViewData["Title"] = "Delete Budget Line";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Budget Line</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Record.BudgetId)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Record.BudgetName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Record.BudgetCategoryId)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Record.BudgetCategoryName)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Record.BudgetedAmount)
        </dt>
        <dd class="col-sm-9">
            @Model.Record.BudgetedAmount.FormatCurrency()
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Record.Id" />
        <a asp-page="@PagePaths.BudgetEdit" asp-route-id="@Model.Record.BudgetId" class="btn btn-secondary">Cancel</a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

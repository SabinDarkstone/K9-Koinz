@using K9_Koinz.ViewComponents
@model PageInstructionDTO;

<a class="btn btn-info btn-sm mb-3" data-bs-toggle="modal" data-bs-target="#helpModal">Get Help</a>

<div class="modal fade" id="helpModal">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="helpModelLabel">@Model.Title</h5>
                <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @foreach (var bodyItem in Model.Body) {
                    <h3>@bodyItem.Heading</h3>
                    <p>@Html.Raw(bodyItem.Body.Replace("\n", "<br/>"))</p>
                }
            </div>
            <div class="modal-footer">
                <button id="btnClose" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@page
@model K9_Koinz.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
@if (Model.Category.ChildCategories.Any()) {
    <h5>Doing so will also delete all child categories.</h5>
}

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        @if (Model.Category.ChildCategories.Any()) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.ChildCategories)
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var child in Model.Category.ChildCategories) {
                        <li>@child.Name</li>
                    }
                </ul>
            </dd>
        }
        @if (Model.Category.IsChildCategory) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.ParentCategoryId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.ParentCategoryName)
            </dd>
        }
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Category.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

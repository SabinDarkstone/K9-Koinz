@page
@model K9_Koinz.Pages.Categories.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        @if (Model.Category.ChildCategories.Any()) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.ChildCategories)
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @foreach (var child in Model.Category.ChildCategories) {
                        <li>@child.Name</li>
                    }
                </ul>
            </dd>
        }
        @if (Model.Category.IsChildCategory) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.ParentCategoryId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.ParentCategory.Name)
            </dd>
        }
        @if (Model.Category.CreatedDate != DateTime.MinValue) {
            <dt class="col-sm-2 mt-4">
                @Html.DisplayNameFor(model => model.Category.CreatedDate)
            </dt>
            <dd class="col-sm-10 mt-4">
                @Html.DisplayFor(model => model.Category.CreatedDate)
            </dd>
        }
        @if (Model.Category.LastModifiedDate != DateTime.MinValue) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category.LastModifiedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.LastModifiedDate)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

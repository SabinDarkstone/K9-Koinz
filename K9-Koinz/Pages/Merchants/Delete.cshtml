@page
@model K9_Koinz.Pages.Merchants.DeleteModel

@{
    ViewData["Title"] = "Delete Merchant";
}

<h1>Delete</h1>

<p class="text-danger">@Model.ErrorMessage</p>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Merchant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Record.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Record.Name)
        </dd>
    </dl>


    <form method="post" id="form">
        <input type="hidden" asp-for="Record.Id" />
        <input asp-for="SelectedMerchantId" type="hidden" id="hfMerchant" />

        <div class="input-group mb-3">
            <div class="form-floating">
                <input id="txtMerchant" class="form-control" placeholder="Merchant" />
                <label asp-for="SelectedMerchantId"></label>
            </div>
            <span asp-validation-for="SelectedMerchantId" class="text-danger"></span>
        </div>

        <button type="submit"class="btn btn-danger" id="btnDelete">Delete</button> |
        <a asp-page="@PagePaths.MerchantIndex">Back to List</a>
    </form>
</div>

@section Scripts {
    <script src="~/js/onTheFlyHelper.js"></script>

    <script>
        $("#btnDelete").on("click", function () {
            $(this).html('<span class="spinner-border spinner-border-sm" role="status"></span> Processing...')
            $(this).prop("disabled", true);
            $("#form").submit();
        });
    </script>
}
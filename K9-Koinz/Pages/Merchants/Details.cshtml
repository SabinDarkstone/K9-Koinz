@page
@model K9_Koinz.Pages.Merchants.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Merchant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Merchant.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Merchant.Name)
        </dd>
        @if (Model.Merchant.CreatedDate != DateTime.MinValue) {
            <dt class="col-sm-2 mt-4">
                @Html.DisplayNameFor(model => model.Merchant.CreatedDate)
            </dt>
            <dd class="col-sm-10 mt-4">
                @Html.DisplayFor(model => model.Merchant.CreatedDate)
            </dd>
        }
        @if (Model.Merchant.LastModifiedDate != DateTime.MinValue) {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Merchant.LastModifiedDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Merchant.LastModifiedDate)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Merchant.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

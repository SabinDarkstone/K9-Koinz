@page
@model K9_Koinz.Pages.Transactions.Split.EditModel

@{
    ViewData["Title"] = "Edit Split";
}

<h1>Edit</h1>

<h4>Split Transaction</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="SplitTransaction.Id" />

            <div class="form-group form-floating">
                <input asp-for="SplitTransaction.AccountName" class="form-control" readonly style="background-color: #eaeaea"/>
                <label asp-for="SplitTransaction.AccountId"></label>
            </div>
            <div class="form-group form-floating">
                <input asp-for="SplitTransaction.Date" class="form-control" value="@Model.SplitTransaction.Date.FormatForUrl()" readonly style="background-color: #eaeaea" />
                <label asp-for="SplitTransaction.Date"></label>
            </div>
            <div class="form-group form-floating">
                <input asp-for="SplitTransaction.MerchantName" class="form-control" readonly style="background-color: #eaeaea" disabled />
                <label asp-for="SplitTransaction.MerchantId"></label>
            </div>
            <div class="form-group form-floating">
                <input id="txtCategory" class="form-control" value="@Model.SplitTransaction.CategoryName" placeholder="Category" />
                <label asp-for="SplitTransaction.CategoryId"></label>
                <input asp-for="SplitTransaction.CategoryId" type="hidden" id="hfCategory" />
                <span asp-validation-for="SplitTransaction.CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="SplitTransaction.Amount" class="form-control" readonly style="background-color: #eaeaea" />
                <label asp-for="SplitTransaction.Amount"></label>
            </div>
            <div class="form-group form-floating">
                <select asp-for="SplitTransaction.SavingsGoalId" class="form-control" asp-items="@Model.SavingsGoalList">
                    <option value="@Guid.Empty">No Goal</option>
                </select>
                <label asp-for="SplitTransaction.SavingsGoalId"></label>
            </div>
            <div class="form-group form-floating">
                <textarea asp-for="SplitTransaction.Notes" class="form-control" style="height:150px" placeholder="Notes"></textarea>
                <label asp-for="SplitTransaction.Notes"></label>
                <span asp-validation-for="SplitTransaction.Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
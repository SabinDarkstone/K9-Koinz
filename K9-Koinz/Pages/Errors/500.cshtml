@page
@model K9_Koinz.Pages.Errors._500Model
@{
    ViewData["Title"] = "500 - Internal Server Error";
}

<!-- Jumbotron -->
<div class="bg-light rounded-3">
    <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Sigh...</h1>
        <p class="col-md-8 fs-4">
            There is a bug in the code.  Go ahead and give these error details to Sabin.
        </p>
        <button class="btn btn-primary btn-lg" data-bs-toggle="collapse" data-bs-target="#details">See Details</button>
    </div>
</div>

<div style="min-height: 120px;">
    <div class="collapse" id="details">
        <div class="card card-body">
            <h4>Error Message</h4>
            <p>
                @Model.ErrorMessage
            </p>

            <h4>Stack Trace</h4>
            <p>
                @Model.StackTrace
            </p>

            <h4>Path</h4>
            <p>
                @Model.Path
            </p>
        </div>
    </div>
</div>
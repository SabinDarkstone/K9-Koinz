@page
@model K9_Koinz.Pages.Tags.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-floating">
                <input asp-for="Record.Name" class="form-control" placeholder="Name" />
                <label asp-for="Record.Name"></label>
                <span asp-validation-for="Record.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input asp-for="Record.ShortForm" class="form-control" placeholder="Short Form" />
                <label asp-for="Record.ShortForm"></label>
                <span asp-validation-for="Record.ShortForm" class="text-danger"></span>
            </div>
            <div class="form-group form-floating">
                <input type="color" asp-for="Record.HexColor" class="form-control" />
                <label asp-for="Record.HexColor"></label>
                <span asp-validation-for="Record.HexColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="@PagePaths.TagIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

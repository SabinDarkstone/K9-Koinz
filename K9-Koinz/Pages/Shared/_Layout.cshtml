 @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - K9 Koinz</title>

    <!-- Bootstrap with Popper -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/&#64;popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="favicon.ico">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body id="body">
    <header class="d-print-none">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <environment names="Development">
                    <a class="navbar-brand" asp-area="" asp-page="@PagePaths.Homepgae">K9 Koinz Dev</a>
                </environment>
                <environment names="Production">
                    <a class="navbar-brand" asp-area="" asp-page="@PagePaths.Homepgae">K9 Koinz</a>
                </environment>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="padding-right: 0.8rem">
                            <a id="shortcut-transaction" class="btn btn-sm btn-success" asp-page="@PagePaths.TransactionCreate" style="margin: 0.4rem var(--bs-nav-link-padding-x);">
                                <i class="fa-solid fa-plus"></i>
                                <span id="quickAddText">Quick Add</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a id="nav-accounts" class="nav-link nav-link-hover" asp-page="@PagePaths.AccountIndex"><i class="fa-solid fa-landmark"></i> Accounts</a>
                        </li>
                        <li class="nav-item">
                            <a id="nav-transactions" class="nav-link nav-link-hover" asp-page="@PagePaths.TransactionIndex"><i class="fa-solid fa-scale-balanced"></i> Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a id="nav-budgets" class="nav-link nav-link-hover" asp-page="@PagePaths.BudgetIndex"><i class="fa-solid fa-file-invoice"></i> Budgets</a>
                        </li>
                        <li class="nav-item">
                            <a id="nav-bills" class="nav-link nav-link-hover" asp-page="@PagePaths.BillIndex"><i class="fa-solid fa-money-bills"></i> Bills</a>
                        </li>
                        <li class="nav-item">
                            <a id="nav-savings" class="nav-link nav-link-hover" asp-page="@PagePaths.SavingsIndex"><i class="fa-solid fa-piggy-bank"></i> Savings</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link nav-link-hover dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                                <i id="nav-more" class="fa-solid fa-ellipsis"></i> More
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a id="nav-merchants" class="dropdown-item nav-lin nav-link-hover" asp-page="@PagePaths.MerchantIndex"><i class="fa-solid fa-cash-register"></i> Merchants</a>
                                </li>
                                <li class="nav-item">
                                    <a id="nav-categories" class="dropdown-item nav-link nav-link-hover" asp-page="@PagePaths.CategoryIndex"><i class="fa-solid fa-layer-group"></i> Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a id="nav-tags" class="dropdown-item nav-link nav-link-hover" asp-page="@PagePaths.TagIndex"><i class="fa-solid fa-tags"></i> Tags</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a id="nav-support" class="nav-link nav-link-hover" asp-page="@PagePaths.HelpForm"><i class="fa-solid fa-question"></i> Support</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted d-print-none">
        <div class="container">
            &copy; 2024 - K9 Koinz - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JQuery -->
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css" />

    <!-- Custom JS -->
    <script src="~/js/autocompleteHelper.js"></script>
    <script src="~/js/cookieHelper.js"></script>
    <script src="~/js/inputActions.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
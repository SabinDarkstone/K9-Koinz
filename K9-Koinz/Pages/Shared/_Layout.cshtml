<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - K9 Koinz</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/&#64;popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="icon" type="image/x-icon" href="favicon.ico">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>
    <header class="d-print-none">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <environment names="Development">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">K9 Koinz Dev</a>
                </environment>
                <environment names="Production">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">K9 Koinz</a>
                </environment>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-hover" asp-page="/Accounts/Index"><i class="fa-solid fa-landmark"></i> Accounts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-hover" asp-page="/Transactions/Index"><i class="fa-solid fa-scale-balanced"></i> Transactions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-hover" asp-page="/Budgets/Index"><i class="fa-solid fa-file-invoice"></i> Budgets</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-hover" asp-page="/Bills/Index"><i class="fa-solid fa-money-bills"></i> Bills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-hover" asp-page="/SavingsGoals/Index"><i class="fa-solid fa-piggy-bank"></i> Savings Goals</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link nav-link-hover dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis"></i> More
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item nav-link text-dark nav-link-hover" asp-page="/Merchants/Index"><i class="fa-solid fa-cash-register"></i> Merchants</a>
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item nav-link text-dark nav-link-hover" asp-page="/Categories/Index"><i class="fa-solid fa-layer-group"></i> Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item nav-link text-dark nav-link-hover" asp-page="/Tags/Index"><i class="fa-solid fa-tags"></i> Tags</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item nav-link text-dark nav-link-hover" asp-page="/DataImportWizard"><i class="fa-solid fa-file-import"></i> Import</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted d-print-none">
        <div class="container">
            &copy; 2024 - K9 Koinz - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.10.0.min.js" type="text/javascript"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/jquery-ui.min.js" type="text/javascript"></script>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css"
          rel="Stylesheet" type="text/css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>